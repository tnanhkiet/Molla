@model Product
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Sản phẩm";
}

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Sản phẩm</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form asp-controller="Admin" asp-action="SaveProduct" method="post" enctype="multipart/form-data">
        <div class="card-body">
            <input type="hidden" name="id" value="@Model.Id" />
            <div class="form-group">
                <label for="name">Tên sản phẩm</label>
                <input type="text" class="form-control" id="name" name="name" value="@Model.Name"
                    placeholder="Nhập tên sản phẩm" required>
            </div>
            <div class="form-group">
                <label for="description">Mô tả ngắn</label>
                <textarea class="form-control summernote" name="description" id="description"
                    rows="3" required>@Model.Description</textarea>
            </div>
            <div class="form-group">
                <label for="description">Thông tin chung</label>
                <textarea class="form-control summernote" name="information" id="information"
                    rows="3" required>@Model.Information</textarea>
            </div>
            <div class="form-group">
                <label for="description">Thông tin bổ sung</label>
                <textarea class="form-control summernote" name="additional" id="additional"
                    rows="3" required>@Model.Additional</textarea>
            </div>
            <div class="form-group">
                <label for="description">Vận chuyển</label>
                <textarea class="form-control" name="shipping" id="shipping"
                    rows="3" required>@Model.Shipping</textarea>
            </div>
            <div class="form-group">
                <label for="picture">Hình ảnh</label>
                <div class="input-group">
                    <input type="file" multiple class="form-control" id="picture" name="files" required>
                </div>
            </div>
            <div class="form-group">
                <label for="content">Thương hiệu</label>
                @Html.DropDownList("brandId",(SelectList)ViewBag.Brands, new { @class="form-control" })
            </div>
        </div>
        @Html.Raw(ViewBag.Message)
        <!-- /.card-body -->

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Lưu</button>
        </div>
    </form>
</div>
@section css{
<link rel="stylesheet" href="/assets/plugins/summernote/summernote-bs4.min.css">
}
@section js{
<script src="/assets/plugins/summernote/summernote-bs4.min.js"></script>
<script>
    $(function () {
        // Summernote
        $('.summernote').summernote()
    })
</script>
}